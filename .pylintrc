[MAIN]

[FORMAT]
max-line-length=150

[DESIGN]
max-parents=15

[MESSAGES CONTROL]
disable=
    too-many-instance-attributes,
    len-as-condition,
    too-few-public-methods,
    anomalous-backslash-in-string,
    no-else-return,
    simplifiable-if-statement,
    too-many-arguments,
    duplicate-code,
    no-name-in-module,
    no-member,
    raw-checker-failed,
    bad-inline-option,
    locally-disabled,
    file-ignored,
    suppressed-message,
    useless-suppression,
    deprecated-pragma,
    import-error,
    missing-docstring,
    invalid-name,
    consider-using-enumerate,
    fixme
